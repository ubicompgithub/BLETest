<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Start connection" />

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Close app" />

    <Button
        android:id="@+id/buttonPreCap"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Get ROI range" />


    <Button
        android:id="@+id/buttonCap"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Take picture" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Ble Reset" />

    <Button
        android:id="@+id/buttonWriteId"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Write Id" />

    <Button
        android:id="@+id/buttonVoltage"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Get Voltage" />

    <TextView
        android:id="@+id/progressDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize = "36sp"
        android:ems="10" />


    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="160sp"
        android:layout_height="120sp"
        android:layout_below="@+id/progressDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detectionResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:gravity="center" />

    <EditText
        android:id="@+id/editArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPreview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/idDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:ems="10"
        android:gravity="center"/>
        
    <TextView
        android:id="@+id/versionDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:ems="10"
        android:gravity="center" />

    <TextView
        android:id="@+id/avgROI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:ems="10"
        android:gravity="center" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>
